# Example environment variables for connecting to a remote Postgres database
# Copy to .env and edit values before running

NODE_ENV=development
DB_DIALECT=postgres
DB_HOST=your.db.host.example.com
DB_PORT=5432
DB_NAME=supermarket_db
DB_USER=supermarket_user
DB_PASS=supermarket_password

# Optional full URL method
# DATABASE_URL=postgres://user:password@host:5432/dbname

# Server configuration
BASE_URL=http://localhost:2801

# Authentication & security
JWT_SECRET=change_me
BCRYPT_SALT_ROUNDS=10
JWT_EXPIRES_IN=10d

# Firebase Cloud Messaging (FCM) Configuration
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# PayMob Payment Gateway Configuration (SANDBOX MODE)
# Get your credentials from: https://accept.paymob.com/portal2/en/register
# These are SANDBOX credentials - replace with production values when going live
PAYMOB_API_KEY=your_sandbox_api_key_here
PAYMOB_INTEGRATION_ID=your_integration_id_here
PAYMOB_IFRAME_ID=your_iframe_id_here
PAYMOB_HMAC_SECRET=your_hmac_secret_here
PAYMOB_API_URL=https://accept.paymob.com/api



APP_SCHEME=APP_SCHEME
BASE_URL=https://foodz.ma-core.cloud/
APP_STORE_URL=https://apps.apple.com/app/your-app
PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.yourapp

BEON_TOKEN=sososososososososososospososososos